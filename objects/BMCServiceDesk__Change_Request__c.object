        <active>true</active>
        <description>This Rule does not allow user to modify record, if it is closed.</description>
        <errorConditionFormula>AND( NOT( BMCServiceDesk__State__c ) , NOT(PRIORVALUE( BMCServiceDesk__State__c ) ), NOT( ISNEW() ),NOT( ISCHANGED( BMCServiceDesk__Total_Duration_minutes__c ) )  )</errorConditionFormula>
