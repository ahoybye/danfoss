    <validationRules>
        <fullName>ccpt__Access_Level_User_Only</fullName>
        <active>true</active>
        <description>When the attendee is a user an access level is required. If the attendee is a contact the access level must be blank.</description>
        <errorConditionFormula>IF(ISBLANK(ccpt__User__c),
	NOT(ISBLANK(ccpt__Access_Level__c)),
/*ELSE*/
