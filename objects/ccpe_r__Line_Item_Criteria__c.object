<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>ccpe_r__Global_Line_Item_cannot_have_Work_Type</fullName>
        <active>true</active>
        <errorConditionFormula>(ccpe_r__Global_Line_Item__c &amp;&amp; NOT(ISBLANK( ccpe_r__Work_Type__c ))) ||  (ccpe_r__Retainer__r.ccpe_r__Type__c == &apos;Global&apos; &amp;&amp; NOT(ISBLANK( ccpe_r__Work_Type__c )))</errorConditionFormula>
        <errorMessage>Global Line Items cannot have a Work Type</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>ccpe_r__Only_1_Global_Line_Item_Allowed</fullName>
        <active>true</active>
        <description>Only a single Line Item Criteria may exist for a retainer marked Global</description>
        <errorConditionFormula>IF(ISNEW(),
ccpe_r__Retainer__r.ccpe_r__Type__c == &apos;Global&apos;, false)</errorConditionFormula>
        <errorMessage>A Line Item cannot be added if the specified Retainer has a Global Line Item</errorMessage>
    </validationRules>
</CustomObject>
