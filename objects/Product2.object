<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Only_API_can_edit_Name</fullName>
        <active>true</active>
        <description>For Product (PS) record type only [or NULL record type for all products existing before CE record type was created]</description>
        <errorConditionFormula>AND(RecordType.DeveloperName != &apos;Product_CE&apos;,
 $Profile.Name != &apos;API_only_user&apos;,
 ISCHANGED(Name))</errorConditionFormula>
        <errorDisplayField>Name</errorDisplayField>
        <errorMessage>Editing the Product Description is only allowed by integration.</errorMessage>
    </validationRules>
</CustomObject>
