<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Account_Channel_Required</fullName>
        <active>true</active>
        <description>The selected account must have a channel selected</description>
        <errorConditionFormula>ISPICKVAL( Customer__r.Channel__c, &apos;&apos;)</errorConditionFormula>
        <errorMessage>The selected account must have a channel selected.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Require_Extension_End_Date</fullName>
        <active>true</active>
        <description>require extension end date when selected expiration action is Extend</description>
        <errorConditionFormula>AND( ISPICKVAL(Expiration_Action__c , &apos;Extend&apos;), ISNULL(Review_Date__c))</errorConditionFormula>
        <errorDisplayField>Review_Date__c</errorDisplayField>
        <errorMessage>For extended contracts you must enter a date when the extension will end for further review.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Sales_Manager_Required</fullName>
        <active>true</active>
        <description>The selected account must have a sales manager entered</description>
        <errorConditionFormula>OR(ISNULL( Customer__r.Sales_Manager__c ), Customer__r.Sales_Manager__c == &apos;&apos;)</errorConditionFormula>
        <errorMessage>The selected account must have a sales manager entered.</errorMessage>
    </validationRules>
</CustomObject>
