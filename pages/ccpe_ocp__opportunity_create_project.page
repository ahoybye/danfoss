<apex:page id="page" standardController="Opportunity" extensions="ccpe_ocp.OpportunityCreateProjectExtn">

	<apex:sectionHeader title="{!Opportunity.Name}" subtitle="Create Project" />

	<apex:pageMessages id="messages" />

	<apex:form id="form" rendered="{!NOT(ISBLANK(templates))}">
		<apex:pageBlock id="block">
			<apex:pageBlockButtons >
				<apex:commandButton action="{!startClone}" value="Create Project" />
			</apex:pageBlockButtons>
			<apex:pageBlockSection id="section">
				<apex:pageBlockSectionItem >
					<apex:outputLabel value="Select a Project Template" for="project" />
					<apex:selectList id="project" value="{!projectId}" size="1">
						<apex:selectOptions value="{!templates}" />
					</apex:selectList>
				</apex:pageBlockSectionItem>
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>	

</apex:page>