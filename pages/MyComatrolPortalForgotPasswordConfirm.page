<apex:page title="{!$Label.site.forgot_password_confirmation}"
			showHeader="false"
			sidebar="false"  
			standardStylesheets="false"			 
			CACHE="FALSE">
	<apex:composition template="{!$Site.Template}">			
		<apex:define name="middle-content">		        
			<div id="login" style="width:550px">
                <apex:panelGroup >
                  <br/>
                  <apex:outputText styleClass="title" value="{!$Label.site.temp_password_sent}"/>
                  <br/>
                  <br/>
                  <apex:outputLink value="{!$Page.MyComatrolPortalLogin}" rendered="{!$Site.LoginEnabled}">{!$Label.site.go_to_login_page}</apex:outputLink>
                  <br/>
                </apex:panelGroup>
	      </div>  	      
      </apex:define>
	</apex:composition>      
</apex:page>